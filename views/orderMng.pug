extends layout

block content
  .page-header
    h4 Unpaid Order List 订单列表

  form.form-horizontal(method='POST')
    .form-group
      case rst.length
        when 0
          h2(style="font-size:30px;color:green;")  目前没有订单！  
        default 
          each item, index in rst
            li(style="color:Magenta;  font-size:15px;")= `${item.email}：$${item.totalPrice},下单${item.createdAt.getMonth() + 1}月${item.createdAt.getDate()}日${item.createdAt.getHours()}:${item.createdAt.getMinutes()}` 
            li(style="color:blue;  font-size:15px;")= `客戶：${item.name}` + `, 取货：${item.fetchTime}`
            //- li(style="list-style-type: none; color:blue;  font-size:15px;")= `所订货物:`            
            each pdt, index in item.items
              li(style="overflow-x: auto; float: left;")= "☻" + pdt.name + pdt.qty + pdt.unit2.replace("/","") + "$" + pdt.totalPrice            
            <br />
            .col-sm-offset-2.col-sm-8
              button.btn.btn-primary(id = `${item._id}` name = 'status' type='button' onclick="myFunction(this.id, this.name)" style="font-size:12px; overflow-x: auto; float: left; margin-left: 1px; color: black;background-color: white;") #{item.status}
              //- button.btn.btn-primary(id = `${item._id}` name = 'status' type='primary' style="font-size:12px; overflow-x: auto; float: left; margin-left: 1px; color: black;background-color: white;") X未付款
              //- button.btn.btn-primary(type='submit' style="font-size:25px;") 
              //- |测试
            hr
  script 
    include ../public/js/script.js